  "private": true,
  "description": "AWS CDK infrastructure for email.ponton.io newsletter platform",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:dev": "cdk synth --context environment=dev",
    "synth:prod": "cdk synth --context environment=prod",
    "diff:dev": "cdk diff --context environment=dev",
    "diff:prod": "cdk diff --context environment=prod",
    "deploy:dev": "cdk deploy --all --context environment=dev",
    "deploy:prod": "cdk deploy --all --context environment=prod --require-approval broadening"
  },
  "keywords": [
    "aws",
    "cdk",
    "newsletter",
    "ses",
    "email"
  ],
